ul{list-style-type:none;}
#star{position:relative;width:90%;margin:10px auto;}
#star ul,#star span{float:left;display:inline;height:90px;line-height:90px;}
#star ul{margin:0 20px;}
#star li{float:left;width:100px;cursor:pointer;text-indent:-9999px;background:url(../img/star2.png) no-repeat;}
#star strong{color:#f60;padding-left:10px;}
#star li.on{background-position:0 -98px;}
#star p{position:absolute;top:20px;width:159px;height:60px;display:none;background:url(../img/icon.gif) no-repeat;padding:7px 10px 0;}
#star p em{color:#f60;display:block;font-style:normal;}
