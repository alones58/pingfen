    background: #00FF00;
}


#wrap
{
    width: 90%px;
    margin: 50auto; /*key code:*/
    overflow: hidden;
}
#left, #center, #right
{
    /*key code:*/
    margin-bottom: -10000px;
    padding-bottom: 10000px;
}
#left
{

    float: left;
    width: 33%;
}
#center
{

    float: left;
    width: 33%;
}
#right
{

    float: right;
    width: 33%;
}
.thr div.content
{
    width: 100%;
    float: left;
}
.thr div.subMenuLeft, .thr div.infoRight
{
    float: left;
}
.thr div.subMenuLeft
{
    width: 30%;
    margin-left: -100%;
    background: #00FFFF;
}
.thr div.infoRight
{
    width: 30%;
    margin-left: -200px;
    background: #FF0000;
}
.thr div.mainBoxCenter
{
    margin-left: 300px;
    margin-right: 400px;
    background: #00FF00;
}